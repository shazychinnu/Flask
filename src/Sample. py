import tkinter as tk
from tkinter import ttk

def on_edit_click():
    selected_item = treeview.focus()
    if selected_item:
        # Perform edit action based on the selected item
        print("Edit:", treeview.item(selected_item)['values'])

def on_delete_click():
    selected_item = treeview.focus()
    if selected_item:
        # Perform delete action based on the selected item
        treeview.delete(selected_item)

# Create main window
root = tk.Tk()
root.title("Data Display with Edit/Delete Icons")

# Create Treeview
columns = ("Name", "Age", "Action")
treeview = ttk.Treeview(root, columns=columns, show="headings")
treeview.heading("Name", text="Name")
treeview.heading("Age", text="Age")
treeview.heading("Action", text="Action")

# Add sample data
data = [("John", 25), ("Jane", 30), ("Bob", 22)]
for item in data:
    treeview.insert("", "end", values=item)

# Add Edit and Delete icons
edit_icon = tk.PhotoImage(file="edit_icon.png")  # Provide the path to your edit icon image
delete_icon = tk.PhotoImage(file="delete_icon.png")  # Provide the path to your delete icon image

treeview.column("Action", width=100, anchor="center")
treeview.tag_configure("editable", image=edit_icon)
treeview.tag_configure("deletable", image=delete_icon)

for item_id in treeview.get_children():
    treeview.item(item_id, tags=("editable", "deletable"))

# Bind events for Edit and Delete clicks
treeview.bind("<Double-1>", lambda event: on_edit_click())
treeview.bind("<Delete>", lambda event: on_delete_click())

treeview.pack(pady=10)

root.mainloop()
